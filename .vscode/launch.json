  "version": "0.2.0",
  "configurations": [
    {
      "name": "modules list",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "query",
        "modules"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Seed Resources",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "harvest",
        "resources",
        "-f${workspaceFolder}/examples/farm/modules/.terraform/providers/schema.json"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Seed Modules",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "harvest",
        "modules",
        "-d",
        "examples/farm/modules", // terraform directory
        "-l" // include local
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Seed Mappings",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "harvest",
        "mappings",
        "-d",
        "examples/farm/modules", // terraform directory
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Run Platform Lint",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "platform",
        "lint",
        "--dir",
        "platform/definition",
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Run API",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/api/main.go",
      "envFile": "${workspaceFolder}/.env",
    },
    {
      "name": "Harvest Dependency-interfaces",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/cli/terrarium/main.go",
      "args": [
        "harvest",
        "dependencies",
        "-d",
        "examples/platform/"
      ],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
    },
  ]
}
